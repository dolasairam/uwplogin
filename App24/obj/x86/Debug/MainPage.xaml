<Page
    x:Class="App24.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App24"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' Name="grid1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="200"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='3' x:Name="VisualStatePhone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="b1.(Grid.Row)" Value="2"/>
                        <Setter Target="b2.(Grid.Row)" Value="3"/>
                        <Setter Target="b3.(Grid.Row)" Value="4"/>
                        <Setter Target="b1.(Grid.Column)" Value="1"/>
                        <Setter Target="b2.(Grid.Column)" Value="1"/>
                        <Setter Target="b3.(Grid.Column)" Value="1"/>
                        <Setter Target="grid1.Background" Value="LightCyan"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="VisualStateTablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="b1.(Grid.Row)" Value="2"/>
                        <Setter Target="b2.(Grid.Row)" Value="2"/>
                        <Setter Target="b3.(Grid.Row)" Value="2"/>
                        <Setter Target="b1.(Grid.Column)" Value="0"/>
                        <Setter Target="b2.(Grid.Column)" Value="1"/>
                        <Setter Target="b3.(Grid.Column)" Value="2"/>
                        <Setter Target="grid1.Background" Value="Orange"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Image x:ConnectionId='5' Name="image" HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="200" Source="Assets/flip.png" Margin="111,87,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" />
        <Button x:ConnectionId='6' Name="b1" Content="login" Grid.Row="2" Grid.Column="1" Background="Violet"  Margin="35,44,0,44"                  />
        <Button x:ConnectionId='7' Name="b2" Content="newuser" Grid.Row="3" Grid.Column="1" Background="YellowGreen" Margin="20,44,0,44"                  />
        <Button x:ConnectionId='8' Name="b3" Content="skip login" Grid.Row="4" Grid.Column="1" Background="Yellow" Margin="15,44,0,44"                  />

    </Grid>

</Page>

